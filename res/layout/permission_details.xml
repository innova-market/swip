<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tableLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#202020"
        android:baselineAligned="false" >

        <TextView
            android:id="@+id/permission"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_span="2" />
    </TableRow>

    <View
        android:layout_height="1dip"
        android:layout_marginBottom="50dp"
        android:background="#FF909090" />

    <TableRow
        android:id="@+id/privacyRisk"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_margin="5dp"
        android:baselineAligned="false" >

        <ImageView
            android:id="@+id/privacyImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/warn40" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This request implies..."
                android:textSize="20sp" />

            <TextView
                android:id="@+id/risk"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:text="This app is being granted access to use phone features that may contain sensitive information."
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/featureLoss"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_margin="5dp" >

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@drawable/info40" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="The developer says..."
                android:textSize="20sp" />

            <TextView
                android:id="@+id/explanation"
                android:layout_width="256dp"
                android:layout_height="wrap_content"
                android:text="This app is asking access to phone features currently denied. Parts of the application may not completely work or some features may be disabled."
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_weight="1" >
        <Button
            android:id="@+id/deny"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="Deny" />

        <Button
            android:id="@+id/grant"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="Grant" />

    </TableRow>
</TableLayout>